<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag "comedyClubSofia.jpg" %>
      <div class="container">
        <div class="carousel-caption d-none d-md-block text-left">
          <h1>Welcome to Comedy Club Sofia!</h1>
          <p>We are the first and only comedy club in Bulgaria!</p>
          <p>Join us in our journey!</p>
          <p><%= link_to 'Register', new_user_registration_path, class:'btn btn_highlight' %></p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "ComedyClubSofiaTwo.jpg" %>
      <div class="container">
        <div class="carousel-caption d-none d-md-block text-right">
          <h1>Who are we?</h1>
          <p>Get to know us better.</p>
          <p><%= link_to 'About', home_about_path, class:'btn btn_highlight' %></p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "actorsAll.jpg" %>
      <div class="container">
        <div class="carousel-caption d-none d-md-block text-right">
          <h1>People behind our success.</h1>
          <p>Meet our comedians.</p>
          <p><%= link_to 'Comedians', home_comedians_path, class:'btn btn_highlight' %></p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "ComedyClubSofiaFour.jpg" %>
      <div class="container">
        <div class="carousel-caption d-none d-md-block text-right">
          <h1>What is it to be at one of our shows?</h1>
          <p>Check photos from previous shows.</p>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Browse gallery</a></p>
        </div>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
