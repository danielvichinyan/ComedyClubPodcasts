<section class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @podcast.title %>
      </p>


      <p>
        <% if @podcast.banner.present? %>
          <%= image_tag (@podcast.banner.url(:medium)) %>
        <% else %>
        <% end %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @podcast.description %>
      </p>

      <%= link_to 'Edit', edit_podcast_path(@podcast) %> |
      <%= link_to 'Back', podcasts_path %>
</section>
