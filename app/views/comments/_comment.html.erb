<div class="btn_holder" style="margin-top:10rem">
  <h2>
    Comments
  </h2>
  <table class="table table-hover table-striped table-responsive-xs table-dark">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Text</th>
        <th colspan="3">Editing Options</th>
      </tr>
    </thead>
    <tbody>
      <% @podcast.comments.each do |comment| %>
        <tr>
          <td>
            <%= comment.user_email %>
          </td>

          <td>
            <!-- Displays at what time was the comment created. -->
            <%= comment.created_at.strftime('%a %-b %-d, %Y at %l:%M %P') %>
          </td>

          <td>
            <%= comment.content %>
          </td>

          <td>
            <%= link_to 'Delete Comment', [comment.podcast, comment], class: 'btn btn_highlight', method: :Delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
      </div>
